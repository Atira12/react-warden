{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "allowJs": true,
    "checkJs": false,
    "rootDir": "./",
    "removeComments": true,
    "noEmit": false,
    "pretty": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": [
    "./lib/**/*",
    "./tests/**/*"
  ],
  "exclude": [
    "node_modules"
  ]
}
